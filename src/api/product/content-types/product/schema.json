{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string"
    },
    "price": {
      "type": "decimal"
    },
    "salePrice": {
      "type": "decimal"
    },
    "image": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": false
    },
    "slug": {
      "type": "uid",
      "targetField": "name"
    },
    "availableColors": {
      "type": "json"
    },
    "quantity": {
      "type": "integer",
      "required": true,
      "min": 0,
      "default": 100
    },
    "availableSizes": {
      "type": "json"
    },
    "categories": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::category.category",
      "inversedBy": "products"
    }
  }
}
