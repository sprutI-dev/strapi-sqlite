{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product",
    "description": ""
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string"
    },
    "price": {
      "type": "decimal"
    },
    "salePrice": {
      "type": "decimal"
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "slug": {
      "type": "uid",
      "targetField": "name"
    },
    "availableColors": {
      "type": "json"
    },
    "quantity": {
      "type": "integer",
      "required": true,
      "min": 0,
      "default": 100
    },
    "availableSizes": {
      "type": "json"
    },
    "categories": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::category.category",
      "inversedBy": "products"
    },
    "featured": {
      "type": "boolean"
    },
    "newArrival": {
      "type": "boolean"
    },
    "bestSeller": {
      "type": "boolean"
    },
    "specialOffer": {
      "type": "boolean"
    }
  }
}
